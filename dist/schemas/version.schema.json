{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["version"],
  "properties": {
    "version": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "not": {
        "const": "latest"
      }
    },
    "releaseDate": {
      "type": "string",
      "format": "date"
    },
    "packages": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["registryType", "identifier", "transport"],
        "properties": {
          "registryType": {
            "type": "string"
          },
          "registryBaseUrl": {
            "type": "string",
            "format": "uri"
          },
          "identifier": {
            "type": "string"
          },
          "version": {
            "type": "string"
          },
          "fileSha256": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
          },
          "runtimeHint": {
            "type": "string"
          },
          "transport": {
            "type": "object",
            "required": ["type"],
            "properties": {
              "type": {
                "type": "string",
                "enum": ["stdio", "sse", "streamable-http"]
              }
            },
            "additionalProperties": true
          },
          "runtimeArguments": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": true
            }
          },
          "packageArguments": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": true
            }
          },
          "environmentVariables": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": true
            }
          }
        },
        "additionalProperties": true
      }
    },
    "remotes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "url"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["sse", "streamable-http"]
          },
          "url": {
            "type": "string",
            "pattern": "^(https?://[^\\s]+|\\{[a-zA-Z_][a-zA-Z0-9_]*\\}[^\\s]*)$"
          }
        },
        "additionalProperties": true
      }
    },
    "_meta": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "anyOf": [{ "required": ["packages"] }, { "required": ["remotes"] }],
  "additionalProperties": true
}
