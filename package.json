{
  "name": "bos-mcp-registry-engine",
  "version": "1.0.18",
  "description": "A static, hostâ€‘agnostic registry engine for MCP services, supporting validation, listing, and discovery.",
  "main": "dist/index.js",
  "scripts": {
    "clean": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\"",
    "build": "npm run clean && ncc build src/index.js -o dist",
    "prepack": "npm run build",
    "generate": "node src/index.js --action-type generate_registry",
    "validate": "node src/index.js --action-type validate_registry",
    "test": "mocha \"test/**/*.test.js\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,yml,yaml}\"",
    "check": "npm run lint && npm run format:check && npm run validate && npm test && npm run build && npm audit --omit=dev --audit-level=high"
  },
  "keywords": [
    "mcp",
    "registry",
    "model-context-protocol",
    "github-action",
    "static-registry",
    "blackout-secure"
  ],
  "author": "Blackout Secure",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blackoutsecure/bos-mcp-registry-engine.git"
  },
  "bugs": {
    "url": "https://github.com/blackoutsecure/bos-mcp-registry-engine/issues"
  },
  "homepage": "https://github.com/blackoutsecure/bos-mcp-registry-engine#readme",
  "dependencies": {
    "@actions/artifact": "^6.2.0",
    "@actions/core": "^1.11.1",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "fs-extra": "^11.2.0",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@vercel/ncc": "^0.38.1",
    "chai": "^4.5.0",
    "eslint": "^9.39.1",
    "mocha": "^10.8.2",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=20"
  }
}
